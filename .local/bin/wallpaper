#!/bin/sh

# This script if for choosing a wallpaper using rofi, setting the wallpaper with swww and generate a colorscheme from it using pywal.
# For using this script only as a wallpaper changer comment out the line: "wal -i "WALLPAPER_DIR/$SELECTED""

# Directory containing wallpapers
WALLPAPER_DIR=~/.local/wallpapers/

set_wallpaper() {

    # List files in the wallpaper directory and send them to fuzzel
    SELECTED=$(ls $WALLPAPER_DIR | fuzzel -p "Pick a Wallpaper" -d)

    # Check if a selection was made
    if [ -z "$SELECTED" ]; then
        notify-send -t 3000 "No wallpaper selected."
        exit 1
    fi
     
    # wal -i "$WALLPAPER_DIR/$SELECTED"

    swww img --transition-fps 60 --transition-type any "$WALLPAPER_DIR/$SELECTED"

    # Restart mako (if it's running)
    if pgrep dunst > /dev/null; then
      pkill dunst
      setsid -f dunst &
    fi

    # Reload waybar (if it's running)
    if pgrep waybar > /dev/null; then
      killall -SIGUSR2 waybar
    fi

    notify-send -t 3000 "Wallpaper and Colorscheme changed."
}

set_wallpaper
